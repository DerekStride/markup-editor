<%= turbo_frame_tag "issue_card" do %>
  <div class="border rounded-md grid grid-cols-1 divide-y">
    <div class="flex justify-between bg-gray-100 p-3">
      <div><%= @search_data&.total_count || 0 %> results</div>
      <div>Sort By: Best Match</div>
    </div>
    <% if @issues&.any? %>
      <ul>
        <% @issues.each.with_index do |issue, idx| %>
          <li class="p-1 rounded-md hover:bg-gray-300">
            <%= link_to issue.edit_url do %>
              <div class="flex">
                <%= octicon(issue.octicon, class: "flex-initial self-center ml-2 #{issue.open? ? "fill-github-green" : "fill-github-purple"}") %>
                <div class="flex flex-grow flex-col pl-2">
                  <span><%= issue.title %></span>
                  <span class="text-xs text-gray-500"><%= issue.repo %></span>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="flex flex-col items-center p-8">
        <span class="text-lg">No results</span>
        <span class="text-xs text-gray-500">Try adjusting your search filters.</span>
      </div>
    <% end %>
  </div>
<% end %>
